<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/three_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CARRITO DE COMPRAS"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@color/two_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCUno"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bebidauno"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtNombreCUno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coca Cola Personal"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <Button
                        android:id="@+id/btnMenos"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-"/>

                    <TextView
                        android:id="@+id/tvContador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="20dp"/>
                    <Button
                        android:id="@+id/btnMas"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"/>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="3.00"
                android:layout_marginRight="10dp"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@color/two_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCDos"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pizzauno"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtNombreCDos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XL ClÃ¡sico"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btnMenos2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-"/>

                    <TextView
                        android:id="@+id/tvContador2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="20dp"/>
                    <Button
                        android:id="@+id/btnMas2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="50.00"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:textAlignment="textEnd"

                android:textSize="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@color/two_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCTres"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hamburguesauno"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtNombreBUno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whopper"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btnMenos3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-"/>

                    <TextView
                        android:id="@+id/tvContador3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="20dp"/>
                    <Button
                        android:id="@+id/btnMas3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="18.00"
                android:layout_marginRight="10dp"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginTop="40dp"
        android:background="#F0F0F0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Total"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="S/. 71.00"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seguir Comprando"
            android:textColor="@color/black"
            android:onClick="seguirComprando"
            android:backgroundTint="@color/four_color"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="PAGAR"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:onClick="pagar"
            android:backgroundTint="@color/one_color"/>

    </LinearLayout>


</LinearLayout>