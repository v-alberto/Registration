<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/three_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEBIDAS"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            card_view:srcCompat="@drawable/back"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="5dp"
            android:onClick="backB"
            />
    </LinearLayout>





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@color/two_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBUno"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/bebidauno"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtNombreBUno"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coca Cola\nPersonal"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrecioBUno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. 3.00"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/addBUno"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="73dp"
                android:layout_marginLeft="10dp"
                android:onClick="add"
                card_view:srcCompat="@drawable/add"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@color/two_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBDos"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/bebidados"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtNombreBDos"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inca Kola\nPersonal"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrecioBDos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. 3.00"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/addBDos"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="73dp"
                android:layout_marginLeft="10dp"
                android:onClick="add"
                card_view:srcCompat="@drawable/add"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@color/two_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBTres"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/bebidatres"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtNombreBTres"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sprite\nPersonal"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrecioBTres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. 3.00"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/addBTres"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="73dp"
                android:layout_marginLeft="10dp"
                android:onClick="add"
                card_view:srcCompat="@drawable/add"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>